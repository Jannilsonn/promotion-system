<% if promotion.errors.any? %>
    <ul>
        <% promotion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: promotion do |form| %>
    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.label :code %>
        <%= form.text_field :code %>
    </div>
    <div>
        <%= form.label :discount_rate %>
        <%= form.number_field :discount_rate, in: 0..100, step: 0.1 %>
    </div>
    <div>
        <%= form.label :coupon_quantity %>
        <%= form.number_field :coupon_quantity, min: 1 %>
    </div>
    <div>
        <%= form.label :expiration_date %>
        <%= form.text_field :expiration_date %>
    </div>
    <%= form.submit %>
<% end %>